{
  "name": "scholia-diaspros-deckbuilder",
  "version": "2.1.0",
  "description": "A comprehensive web-based card database and deck builder for the Scholia Diaspros Trading Card Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac", 
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "serve": "npx http-server -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/index.html --watch=index.html,TCG-cards.js",
    "preview": "npx live-server --port=8080 --open=/index.html --no-browser"
  },
  "build": {
    "appId": "com.scholiadiaspros.deckbuilder",
    "productName": "Scholia Diaspros Deckbuilder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "!generate-icon.html",
      "!*.bat",
      "!*.sh",
      "!README*.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "TCGIcon.png"
    },
    "mac": {
      "target": "dmg", 
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Deckbuilder"
    }
  },
  "keywords": [
    "tcg",
    "trading-card-game",
    "deck-builder",
    "card-database",
    "fantasy",
    "web-app",
    "javascript",
    "html5"
  ],
  "author": "Lulu",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Owlcan/scholia-diaspros-deckbuilder.git"
  },
  "bugs": {
    "url": "https://github.com/Owlcan/scholia-diaspros-deckbuilder/issues"
  },
  "homepage": "https://Owlcan.github.io/scholia-diaspros-deckbuilder/",
  "engines": {
    "node": ">=14.0.0"
  }
}
